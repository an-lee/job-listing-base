<br>
<br>
<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn btn-default" ) %>
</div>
<br>

<table class="table table-boldered text-center table-striped custab">
  <thead>
    <tr>
      <td class="text-left">Name</td>
      <td>Resumes</td>
      <td>Salary</td>
      <td>Edit</td>
      <td>Delete</td>
      <td>Hide/Publish</td>
      <td>Created time</td>
    </tr>
  </thead>
  <% @jobs.each do |job| %>
  <tr>
    <td class="text-left">
      <%= render_job_status(job) %>
      <%= link_to(job.title, admin_job_path(job)) %>
    </td>
    <td><%= link_to(job.resumes.count, admin_job_resumes_path(job)) %></td>
    <td><%= job.wage_lower_bound %>~<%= job.wage_upper_bound %></td>
    <td>
      <%= link_to edit_admin_job_path(job) do %>
        <i class="fa fa-pencil"></i>
      <% end %>
    </td>
    <td>
      <%= link_to admin_job_path(job), :method => :delete,  :data => { :confirm => "Are you sure?" } do %>
        <i class="fa fa-trash-o"></i>
      <% end %>
    </td>
    <td>
      <% if job.is_hidden %>
        <%= link_to publish_admin_job_path(job) , :method => :post do %>
          <i class="fa fa-eye"></i>
        <% end %>
      <% else %>
        <%= link_to hide_admin_job_path(job), :method => :post do %>
          <i class="fa fa-eye-slash"></i>
        <% end %>
      <% end %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
